@model List<MyApp.Models.Pago>

@{
    ViewData["Title"] = "Menú de Pagos";
}

<h3>Menú de Pagos</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Monto</th>
            <th>Fecha</th>
            <th>Descripción</th>
            <th>Destinatario</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pago in Model)
        {
            <tr>
                <td>@pago.Nombre</td>
                <td>@pago.Monto.ToString("C")</td>
                <td>@pago.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@pago.Descripcion</td>
                <td>@pago.Destinatario</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@pago.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@pago.Id" class="btn btn-sm btn-danger">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    var total = Model.Sum(p => p.Monto);
}

<h5>Total de pagos: @total.ToString("C")</h5>
<a asp-action="Create" class="btn btn-primary mb-3">Agregar nuevo pago</a>